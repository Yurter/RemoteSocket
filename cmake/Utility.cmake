
macro(DISCOVER_ENV_VARIABLE VARIABLE_TO_DISCOVER)
    if( NOT ${VARIABLE_TO_DISCOVER} AND NOT "$ENV{${VARIABLE_TO_DISCOVER}}" STREQUAL "")
        set( ${VARIABLE_TO_DISCOVER} $ENV{${VARIABLE_TO_DISCOVER}})
    endif()
endmacro()

macro(DISCOVER_AND_CACHE_PATH VARIABLE_TO_DISCOVER VARIABLE_DEFAULT_VALUE VARIABLE_DESCRIPTION)
    if( NOT ${VARIABLE_TO_DISCOVER})
        if ("$ENV{${VARIABLE_TO_DISCOVER}}" STREQUAL "")
            set(${VARIABLE_TO_DISCOVER} ${VARIABLE_DEFAULT_VALUE} CACHE PATH "${VARIABLE_DESCRIPTION}" )
        else()
            set( ${VARIABLE_TO_DISCOVER} $ENV{${VARIABLE_TO_DISCOVER}} CACHE PATH "${VARIABLE_DESCRIPTION}" )
        endif()
    endif()
endmacro()
